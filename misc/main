#include "shell.h"

// flag == 1 when encountered single quote and flag == 2 for double quote,
// flag will reset back to 0 when it encounters another single or double quote
int	count_nbr_of_pipes(char *line_read)
{
	int	count;
	int	flag;
	int	i;
	
	flag = 0;
	count = 0;
	i = -1;
	while (line_read[++i])
	{
		if ((flag == 1 && line_read[i] == 39)
			|| (flag == 2 && line_read[i] == '"'))
			flag = 0;
		else if (flag != 0 && line_read[i] != 39 && line_read[i] != '"')
			continue ;
		else if (line_read[i] == 39)
			flag = 1;
		else if (line_read[i] == '"')
			flag = 2;
		else if (line_read[i] == '|')
			count++;
	}
	return (count);
}

