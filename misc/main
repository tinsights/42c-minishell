void	read_input_string_loop(t_params *params)
{
	static char	*line_read;
	int		flag;
	char	*cwd;

	flag = 0;
	cwd = NULL;
	while (1)
	{
		if (!line_read && flag)
			exit(EXIT_SUCCESS);
		if (line_read)
		{
			free(line_read);
			line_read = NULL;
		}
		cwd = getcwd(NULL, 200);
		cwd = strjoin_and_frees1(cwd, "$ ");
		line_read = readline(cwd);
		if (line_read && *line_read)
		{
			parser_and_executor(line_read, params);
			add_history(line_read);
		}
		flag = 1;
	}
}

int	main(int ac, char **av, char **env)
{
	t_params	params;

	params.head_env = create_symbol_table(env);
	read_input_string_loop(&params);
}
