#include "shell.h"

void	parse_and_execute(char *line_read, t_env *head_env)
{
	char	**token_arr;

	token_arr = parse_input_string(line_read, head_env);
}

void	main_shell_loop(t_env *head_env)
{
	static char	*line_read;
	int			flag;
	char		*cwd;

	flag = 0;
	cwd = NULL;
	while (1)
	{
		if (line_read)
		{
			free(line_read);
			line_read = NULL;
		}
		else if (flag)
			exit(EXIT_SUCCESS);
		cwd = getcwd(NULL, 200);
		cwd = strjoin_and_frees1(swd, "$ ");
		line_read = readline(cwd);
		if (line_read && *line_read)
		{
			add_history(line_read);
			parse_and_execute(line_read, head_env);
		}
		flag = 1;
	}
}

int	main(int ac, char **av, char **env)
{
	t_env	*head_env;

	if (ac < 2 || !av[1])
		return (1);
	head_env = create_symbol_table(env);
	main_shell_loop(head_env);
}
